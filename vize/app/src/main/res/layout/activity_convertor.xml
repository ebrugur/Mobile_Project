<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCDCD">

    <!-- Convertor TextView -->

    <!-- Onluk sayılar -->
    <TextView
        android:id="@+id/tv_convertor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#453471"
        android:text="Converter"
        android:textColor="#FFFFFF"
        android:textSize="43sp" />

    <LinearLayout
        android:id="@+id/layoutDecimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#E6E5E8"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_decimal_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Decimal bir değer girin" />

        <Button
            android:id="@+id/btn_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert Decimal" />

        <TextView
            android:id="@+id/tv_binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E4D8E6"
            android:text=" Binary:" />

        <TextView
            android:id="@+id/tv_octal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3D7E5"
            android:text=" Octal:" />

        <TextView
            android:id="@+id/tv_hexadecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3D7E5"
            android:text=" Hexadecimal:" />
    </LinearLayout>

    <!-- Megabyte -->
    <LinearLayout
        android:id="@+id/layoutMegabyte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutDecimal"
        android:layout_marginTop="30dp"
        android:background="#E7E6E9"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_megabyte_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Megabyte bir değer girin" />

        <Button
            android:id="@+id/btn_megabyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert Megabyte" />

        <TextView
            android:id="@+id/tv_kilobyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E3D7E5"
            android:text=" Kilobyte:" />

        <TextView
            android:id="@+id/tv_byte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2D6E4"
            android:text=" Byte:" />

        <TextView
            android:id="@+id/tv_kibibyte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2D6E4"
            android:text=" Kibibyte:" />

        <TextView
            android:id="@+id/tv_bit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2D6E4"
            android:text=" Bit:" />
    </LinearLayout>

    <!-- Celsius -->
    <LinearLayout
        android:id="@+id/layoutCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutMegabyte"
        android:layout_marginTop="30dp"
        android:background="#E8E7EA"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_celsius_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Celsius bir değer girin" />

        <Button
            android:id="@+id/btn_celsius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert Celsius" />

        <TextView
            android:id="@+id/tv_fahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E1D5E3"
            android:text=" Fahrenheit:" />

        <TextView
            android:id="@+id/tv_kelvin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#E2D6E4"
            android:text=" Kelvin:" />
    </LinearLayout>

</RelativeLayout>


